<odoo>
    <!-- 1) The client action record (ir.actions.client) -->
    <record id="action_hello" model="ir.actions.client">
      <field name="name">Hello Odoo action</field>
      <!-- this tag must match the name you register in JS registry -->
      <field name="tag">action_print_message</field>
    </record>

    <!-- 2) Top-level menu -->
    <menuitem id="menu_hello_root" name="Hello Odoo"/>

    <!-- 3) Child menu that triggers the client action -->
    <menuitem id="menu_hello_say_hello"
              name="Say Hello"
              parent="menu_hello_root"
              action="action_hello"/>
</odoo>
